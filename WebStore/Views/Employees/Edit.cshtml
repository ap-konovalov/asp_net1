@model WebStore.Models.Employee
@{
    ViewData["Title"] = $"Редактирование сотрудника{(Model.Id == 0 ? (int?) null : Model.Id)}";
}

<h2>@ViewData["Title"]</h2>

<h4>Сотрудник</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Employees" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Хелпер показывающий ошибку валидации для формы *@
            @* @Html.ValidationSummary(false, "Error from html helper", new {@class="text-danger"}); *@

            <input asp-for="Id" type="hidden"/>

            <div class="form-group">
                <label asp-for="SurName" class="control-label"></label>
                <input asp-for="SurName" class="form-control"/>
                <span asp-validation-for="SurName" class="text-danger"></span>
                @* покажет ошибку валидации для поля Surname  *@
                @* @Html.ValidationMessageFor(m => m.SurName, "Error from html helper", new {@class="text-danger"} ) *@
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control"/>
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input value="Сохранить" class="btn btn-default" type="submit"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a aria-controls="Employees" asp-action="Index">Назад к списку</a>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptPartial");
}
