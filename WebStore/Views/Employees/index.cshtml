@model IEnumerable<WebStore.Models.Employee>

<h3>Сотрудники</h3>

<a asp-controller="Employees" asp-action="Edit" class="btn btn-default">Создать</a>

<hr/>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th></th>
        <th>SurName</th>
        <th>FirstName</th>
        <th>Patronymic</th>
        <th>Age</th>
        <th>Details</th>
        <th></th>
    </tr>
    </thead>
    <tbody>  
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td><a asp-action="Edit" asp-controller="Employees" asp-route-id="@employee.Id"><i class="fa fa-edit"></i></a></td>
            <td>@employee.SurName</td>
            <td>@employee.FirstName</td>
            <td>@employee.Patronymic</td>
            <td>@employee.Age</td>
            <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>
            <td><a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id"><i class="fa fa-times text-danger"></i></a></td>

        </tr>
    }
    </tbody>
</table>
