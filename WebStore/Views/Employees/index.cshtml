@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <title>Employes</title>
</head>
<body>
<h3>Сотрудники</h3>
<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>SurName</th>
        <th>FirstName</th>
        <th>Patronymic</th>
        <th>Age</th>
        <th></th>
    </tr>
    </thead>
    <tbody>  
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.SurName</td>
            <td>@employee.FirstName</td>
            <td>@employee.Patronymic</td>
            <td>@employee.Age</td>
            <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>