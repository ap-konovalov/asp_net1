@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<section id="form"><!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form"><!--login form-->
                    <h2>Login to your account</h2>
                    <form method="post" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input asp-for="UserName" placeholder="@nameof(Model.UserName)"/>
                        <input asp-for="Password" placeholder="@nameof(Model.Password)"/>
                        
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить меня
                        </span>
                        <button type="submit" class="btn btn-default">Войти </button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->