@model RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<h2>Register</h2>

<div class="signup-form"><!--sign up form-->
    <h2>New User Signup!</h2>
    <form method="post" asp-action="Register" asp-controller="Account" asp-antiforgery="true">
        @* @Html.AntiForgeryToken() можно писать вместо asp-antiforgery="true" *@
        @* место вывода инфы о проблема *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="UserName" placeholder="@nameof(Model.UserName)"/>
        <input asp-for="Password" placeholder="@nameof(Model.Password)"/>
        <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)"/>
        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
    </form>
</div><!--/sign up form-->
